<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.TheBandDatabase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueberry_400</item>
        <item name="colorPrimaryVariant">@color/blueberry_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Applying theme colors to app-wide attributes. -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

    </style>

    <!-- Style used for band list name text. -->
    <style name="bandListName">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Style used for band name text. -->
    <style name="bandName">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <!-- Style used for band description text. -->
    <style name="bandDescription">
        <item name="android:textSize">30sp</item>
        <item name="android:padding">30dp</item>
    </style>

    <!-- Style used for Button elements. -->
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/blueberry_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>